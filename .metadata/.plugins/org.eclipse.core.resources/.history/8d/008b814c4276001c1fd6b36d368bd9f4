package db.query;

import java.util.regex.Matcher;
import java.util.regex.Pattern;

import lombok.Data;


public class QueryParser {

	public Matcher queryType(String query) {
		
		Pattern selectPattern = Pattern.compile("(select)\\s+(.*?)\\s+from\\s+(.*?)(?:\\s+where\\s+(.*?))?", Pattern.CASE_INSENSITIVE);
		Matcher selectMatcher = selectPattern.matcher(query);
		
		Pattern insertPattern = Pattern.compile("(insert)\\s+into\\s+(.*?)\\s+values\\s+(.*?)", Pattern.CASE_INSENSITIVE);
		Matcher insertMatcher = insertPattern.matcher(query);
		
		System.out.println(selectMatcher.groupCount());
		System.out.println(insertMatcher.groupCount());
		
		return null;
	}

	
}

