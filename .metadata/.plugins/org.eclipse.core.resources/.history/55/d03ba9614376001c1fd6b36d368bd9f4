public class QueryParser {

	public Matcher queryType(String query) {
		

		
		System.out.println(selectMatcher.matches());
		System.out.println(insertMatcher.matches());
		
		System.out.println(selectMatcher.groupCount());
		System.out.println(selectMatcher.group(1));
		
		if(selectMatcher.group(1)=="select") {
			System.out.println("select");
		}else if (insertMatcher.group(1)=="insert"){
			System.out.println("insert");
		}else {
			System.out.println("fail");
		}
		
		return null;
	}

	
}

